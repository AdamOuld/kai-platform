rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2023, 7, 31);
    }

    match /chatSessions/{id} {
      allow read, write: if request.auth != null && resource.data.user.id == request.auth.uid;
    }
  }
}